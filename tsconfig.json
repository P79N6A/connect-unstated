{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/example/**/*",
    "node_modules"
  ]
}